<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_back_arrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_back_arrow_blue"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatTextView
            android:layout_above="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activate Code"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:textSize="@dimen/sp_18"
            android:layout_marginBottom="@dimen/dp_10"/>


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text"
            android:layout_above="@+id/otp_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Enter The Password \nsent to 1234567890"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp_50"/>

        <com.chaos.view.PinView
            android:id="@+id/otp_view"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            app:itemCount="6"
            app:itemHeight="48dp"
            app:itemRadius="4dp"
            app:itemSpacing="@dimen/dp_05"
            app:itemWidth="36dp"
            app:lineColor="@color/colorPrimary"
            app:lineWidth="2dp"
            app:viewType="line" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_otp_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@drawable/rect_round_otp_button"
            android:text="Submit"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_resend_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resend Code"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:layout_above="@id/btn_otp_submit"
            android:layout_marginBottom="@dimen/dp_15" />

    </RelativeLayout>
</LinearLayout>