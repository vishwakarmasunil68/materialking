<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center"
        android:text="Activate Code"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_18" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/otp_view"
        android:layout_marginBottom="@dimen/dp_50"
        android:gravity="center"
        android:text="Please Enter The Password \nsent to 1234567890" />

    <LinearLayout
        android:id="@+id/otp_view"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <EditText
            android:id="@+id/etOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight=".16"
            android:background="@drawable/bordor_bottom"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1" />

        <EditText
            android:id="@+id/etTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight=".16"
            android:background="@drawable/bordor_bottom"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1" />

        <EditText
            android:id="@+id/etThree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight=".16"
            android:background="@drawable/bordor_bottom"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1" />

        <EditText
            android:id="@+id/etFour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight=".16"
            android:background="@drawable/bordor_bottom"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1" />

        <EditText
            android:id="@+id/etFive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight=".16"
            android:background="@drawable/bordor_bottom"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1" />

        <EditText
            android:id="@+id/etSix"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight=".16"
            android:background="@drawable/bordor_bottom"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1" />


    </LinearLayout>

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/otp_view"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_20"
        android:padding="@dimen/dp_10" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnOtpSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:background="@drawable/rect_round_otp_button"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvResendOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnOtpSubmit"
        android:layout_marginBottom="@dimen/dp_15"
        android:gravity="center"
        android:text="Resend Code"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_16"
        android:visibility="gone" />
</RelativeLayout>