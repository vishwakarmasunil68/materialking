<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/root"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/appCompatTextView"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/dp_20"
        android:src="@drawable/otp_icon" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/appCompatTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Activate Code"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_18" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/otp_view"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center"
        android:text="Please Enter The Password \nsent to 1234567890" />


    <com.appiqo.materialkingseller.helper.PinView
        android:id="@+id/otp_view"
        style="@style/PinWidget.PinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:cursorVisible="true"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:cursorColor="@android:color/black"
        app:itemCount="6"
        app:itemSpacing="5dp"
        app:itemWidth="36dp"
        app:lineColor="@android:color/black"
        app:lineWidth="2dp"
        app:viewType="line" />


    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otp_view"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:padding="@dimen/dp_10" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnOtpSubmit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTimer"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/round_btn"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvResendOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnOtpSubmit"
        android:layout_marginBottom="@dimen/dp_15"
        android:gravity="center"
        android:text="Resend Code"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_16"
        android:visibility="visible" />
</RelativeLayout>